{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
{% if error %}
	    <div class="alert alert-error">{{ error|trans({}, 'FOSUserBundle') }}</div>
	{% endif %}
	<div class="well" style="margin-left:auto;margin-right:auto; width:250px;">
	
	<form action="{{ path("fos_user_security_check") }}" method="post" role="form">
	    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
	<div class="form-group">
	    <label for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
	    <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" required="required" />
	</div>
	<div class="form-group">
	    <label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
	    <input type="password" id="password" class="form-control" name="_password" required="required" />
	 </div>   	
	    <input class="btn btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
	</form>
</div>
{% endblock fos_user_content %}