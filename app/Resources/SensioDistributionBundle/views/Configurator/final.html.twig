{% extends "SensioDistributionBundle::Configurator/layout.html.twig" %}

{% block content_class %}config_done{% endblock %}
{% block content %}
    <div class="step">
        <h1>Bien joué !</h1>
        {% if is_writable %}
        <h2>L'application est configurée</h2>
        {% else %}
        <h2 class="configure-error">L'application est presque configurée mais...</h2>
        {% endif %}
        <h3>
            <span>
                {% if is_writable %}
                    Votre fichier parameters.yml a été reconfiguré avec les paramètres suivants (dans <em>{{ yml_path }}</em>):
                {% else %}
                    Votre fichier parameters.yml n'est pas modifiable! Voici les paramètres à copier-coller dans <em>{{ yml_path }}</em>:
                {% endif %}
            </span>
        </h3>

        <textarea class="symfony-configuration">{{ parameters }}</textarea>

        {% if welcome_url %}
            <ul>
                <li><a href="/">Aller à la page d'accueil de l'application</a></li>
            </ul>
        {% endif %}
    </div>
{% endblock %}
