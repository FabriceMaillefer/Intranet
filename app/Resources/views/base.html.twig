{%- set route = app.request.attributes.get('_route') -%}
{%- set route_params = app.request.attributes.get('_route_params') -%}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Intranet{% endblock %}</title>
        <link href="{{- asset('bundles/fmrcommon/css/bootstrap.min.css') -}}" rel="stylesheet" type="text/css">
        <script src="{{- asset('bundles/fmrcommon/js/jquery.js') -}}" type="text/javascript"></script>
        <script src="{{- asset('bundles/fmrcommon/js/nicEdit.js') -}}" type="text/javascript"></script> 
    	<script src="{{- asset('bundles/fmrcommon/js/jquery-ui-1.9.2.custom.min.js') -}}" type="text/javascript"></script>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
	    <div class="navbar navbar-inverse">
		      <div class="navbar-inner">
		        <div class="container">
		          <a href="/app_dev.php" class="brand">Intranet</a>
		          <div class="nav-collapse collapse">
		            <ul class="nav">		            
						Menu
		            </ul>
		           	{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
		           	<ul class="nav pull-right">
		            	<li>
				             <a href="#">{{ app.user.username }}</a>
				        </li>
            		</ul> 
            		{% endif %}
		          </div>
		        </div>
		      </div>
		    </div>
		    
    	<div class="container-fluid">
			{% for type, flashMessages in app.session.flashbag.all() %}
			    {% for flashMessage in flashMessages %}
			        <div class="alert alert-{{ type }}">
			            {{ flashMessage }}
			        </div>
			    {% endfor %}
			{% endfor %}
	        {% block body %}{% endblock %}
	        {% block javascripts %}{% endblock %}
	    </div>
    </body>
</html>