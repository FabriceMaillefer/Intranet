{% extends '::layout.html.twig' %}
{% block content -%}
	<div class="page-header">
	    <h1>Liste des statutoffres</h1>
	           <a class="btn" href="{{ path('statutoffre_new') }}">
            Ajouter un nouveau statutoffre
      	</a>
    	</div>
	
	
	<table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Statut</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('statutoffre_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.statut }}</td>
                <td><a class="btn btn-info" href="{{ path('statutoffre_show', { 'id': entity.id }) }}">Voir</a>
<a class="btn btn-success" href="{{ path('statutoffre_edit', { 'id': entity.id }) }}">Modifier</a>                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

           <a class="btn" href="{{ path('statutoffre_new') }}">
            Ajouter un nouveau statutoffre
      	</a>
    {% endblock %}
