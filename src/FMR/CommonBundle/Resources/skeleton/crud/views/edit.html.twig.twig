{{ '{% block content %}' }}
<div class="page-header">
    <h1>Modifier un {{ entity|lower }}</h1>
    	<div style="text-align:right;">
		<a class="btn btn-default" href="{{ "{{ path('"~ route_name_prefix ~"_show', { 'id': entity.id }) }}" }}" >
            Retour aux d&eacute;tails du {{ entity}}
        </a>
