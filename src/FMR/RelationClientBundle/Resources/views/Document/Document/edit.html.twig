{% extends 'FMRRelationClientBundle:Document:Document\\layout.html.twig' %}
{% block title %}{{ parent() }} Modification de {{ entity.idsd }} N° {{ entity.id }}{% endblock %}
{% block sidebar %}
    {{ parent() }}
    <li class="divider"></li>
        <li class="nav-header">Facture {{ entity.id }}</li>
        <li><a href="{{ path('document_show', { 'id': entity.id }) }}">Détails de {{ entity.idsd }}</a></li>
{% endblock %}
{% block content %}
<div class="page-header">
    <h1>Modifier {{ entity.idsi }}</h1>
            <div style="text-align:right;">
                        <a class="btn btn-default" href="{{ path('document_show', { 'id': entity.id }) }}" >
         Retour aux d&eacute;tails de {{ entity.idsd }}
         </a>
                </div>
</div>

<form action="{{ path('document_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
    {{ form_widget(edit_form) }}
    <p>
        <button class="btn btn-primary" type="submit">Enregistrer</button>
    </p>
</form>

        <div class="form-actions">
                <a class="btn btn-primary" href="{{ path('document_show', { 'id': entity.id }) }}" >
            Retour aux d&eacute;tails de {{ entity.idsd }}
        </a>
        <a class="btn btn-danger" href="{{ path('document_delete', { 'id': entity.id }) }}">
            Supprimer
        </a>
</div>

{% endblock %}