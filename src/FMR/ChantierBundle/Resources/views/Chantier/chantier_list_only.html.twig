{# Projet TPI - Fabrice Maillefer #}
	<table class="table table-bordered table-striped table-condensed">
        <thead>
            <tr>
                <th>N°</th>
                <th class="hidden-phone">Architecte</th>
                <th>Lieu</th>
                <th>Description</th>
                <th class="hidden-phone">Date de début</th>
                <th>Date de fin</th>
                <th class="hidden-phone">Nb Fournitures</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chantier in chantiers %}
            <tr>
                <td><a href="{{ path('chantier_show', { 'id': chantier.id }) }}">{{ chantier.id }}</a></td>
                <td class="hidden-phone">{{ chantier.architecte }}</td>
                <td>{{ chantier.lieu }}</td>
                <td>{{ chantier.description }}</td>
                <td class="hidden-phone">{% if chantier.dateDebut %}{{ chantier.dateDebut|date('d.m.Y') }}{% endif %}</td>
                <td>{% if chantier.dateFin %}{{ chantier.dateFin|date('d.m.Y') }}{% endif %}</td>
                <td class="hidden-phone">{{ chantier.fournitures.count }}</td>
                <td><a class="btn btn-info" href="{{ path('chantier_show', { 'id': chantier.id }) }}">Voir</a></td>
            </tr>
            {% else %}
			<tr>
				<td colspan="8">
					Aucun chantier trouv&eacute;.
		      	</td>
		      </tr>
        {% endfor %}
        </tbody>
    </table>